<%- include('partials/_header')-%>
  <div class="container">
    <% if(locals.errors){ %>  
      <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= locals.errors %>
      </div>
      <% } %>  
    <div class="add">
      <h1>Add Actor</h1>
    <div id="comment" class="add-block">
      <form method="POST" action="/actor/add-actor" enctype="multipart/form-data">
        <div id="preview"></div>
        <div class="form-text">
          <input type="text" name="name"class="item-name" placeholder="Actor Name">
          <label class="file">
            <input type="file" id="file" name="image" accept="image/*" aria-label="File browser">
              <span class="file-custom"></span>
          </label>
          <div class="lock-box">
            <input type="checkbox" name="visibility" id="lock">
            <label for="lock"><i></i></label>
          </div>
        </div>
        <textarea name="description" placeholder="Actor Description" id="" rows="10"></textarea>
        <button class="add-comment">Submit</button>
      </form>
    </div>
    </div>
    <hr>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>