<%- include('partials/_header')-%>
  <div class="container">
    
    <% for(let i=0; i<myActors.length; i++) { %>
    <div class="film-main">

      <div class="film-content">
        <a class="film-img" href="/actor/<%=myActors[i].id %>"><img src="<%= myActors[i].image %>" alt=""></a>
        <div class="film-text">
          <a class="film-title" href="/actor/<%=myActors[i].id %>"><%= myActors[i].name %></a>
          <p><%= myActors[i].description.substring(0, 600) + "..." %></p>
          <a href="" class="user">@<%= myActors[i].user.username %></a>
        </div>
      </div>
      <div class="process">
        <div class="btns">

          <% if(useractorLikes.includes(myActors[i].id)) { %>
          <a href="/actor/re-like/<%=myActors[i].id %>/my" class="fav like btn-act"><i class="fas fa-heart"></i> <span><%= myActors[i].likes.length %></span></a>
          <% } %>
          <% if(!useractorLikes.includes(myActors[i].id)) { %>
          <a href="/actor/like/<%=myActors[i].id %>/my" class="fav btn-act"><i class="far fa-heart"></i> <span><%= myActors[i].likes.length %></span></a>
          <% } %>
          <a href="#comment" class="comment-btn btn-act"><i class="far fa-comment"></i> <span><%= myActors[i].comments.length %></span></a>
          <% if(myActors[i].visible== false) { %>
            <a href="" class="btn-act"><i class="fas fa-lock"></i></a>
          <% } %>
        </div>
        <div class="process-btns">
          <a href="/actor/update-actor/<%=myActors[i].id %>" class="update-btn pbtn"> Update</a>
          <a href="/actor/delete/<%=myActors[i].id %>/?_method=DELETE" class="delete-btn pbtn" onclick="return confirm('ARE YOU SURE?')"><i class="fas fa-trash"></i></a>
        </div>
      </div>
      
    </div>
    <% } %>
    
  </div>
  <div>


  <script src="/js/script.js"></script>
</body>
</html>