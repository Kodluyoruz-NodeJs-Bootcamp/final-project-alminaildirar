<%- include('partials/_header')-%>
  <div class="container">
    
    <% for(let i=0; i<films.length; i++) { %>
    <div class="film-main">

      <div class="film-content">
        <a class="film-img" href="/film/<%=films[i].id %>"><img src="<%= films[i].image %>" alt=""></a>
        <div class="film-text">
          <div class="film-info">
          <a class="film-title" href="/film/<%=films[i].id %>"><%= films[i].name %></a>
          <p><%= films[i].description.substring(0, 600) + "..." %></p>
        </div>
          <a href="" class="user">@<%= films[i].user.username %></a>
        </div>
        </div>
      </div>
      <div class="btns">

        <% if(userfilmLikes.includes(films[i].id)) { %>
        <a href="/film/re-like/<%=films[i].id %>/all" class="fav like btn-act"><i class="fas fa-heart"></i> <span><%= films[i].likes.length %></span></a>
        <% } %>
        <% if(!userfilmLikes.includes(films[i].id)) { %>
        <a href="/film/like/<%=films[i].id %>/all" class="fav btn-act"><i class="far fa-heart"></i> <span><%= films[i].likes.length %></span></a>
        <% } %>
        <a href="#comment" class="comment-btn btn-act"><i class="far fa-comment"></i> <span><%= films[i].comments.length %></span></a>
      </div>
      
    </div>
    <% } %>
    
  </div>
  <div>
    <div class="container">
        <% if (pages > 0) { %>
        <ul class="pagination">
          <% for (i=1; i <= pages; i++) { %>
            <%   if (i == current) { %>
          <li class="pageNumber active"><a href="/film/films/?page=<%= i %>"><%= i %></a></li>
          <% } else if (i < pages) { %>
          <li class="pageNumber"><a href="/film/films/?page=<%= i %>"><%= i %></a></li>
          <%  } else { %>
          <li class="pageNumber"><a href="/film/films/?page=<%= i %>">></a></li>
          <%  } %>
          <%  } %>
        </ul>
        <% } %>
      </div>

  <script src="/js/script.js"></script>
</body>
</html>