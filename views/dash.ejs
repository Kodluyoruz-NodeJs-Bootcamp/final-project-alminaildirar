        <div class="img"><img src="/images/award.png" alt=""></div>
      </div>
      <div class="film-content">
        <a class="film-img" href="/actor/<%=actors[i].id %>"><img src="<%= actors[i].image %>" alt=""></a>
        <div class="film-text">
          <div class="film-info">
            <div class="film-header">
            <a class="film-title" href="/actor/<%=actors[i].id %>"><%= actors[i].name %></a>
            <div class="ago"><%= (moment(actors[i].created).startOf('minute').fromNow()) %> <i class="far fa-clock"></i></div>
          </div>
            <p><%= actors[i].description.substring(0, 600) + "..." %></p>
