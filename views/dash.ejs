<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/images/popcorn.png" type="image/x-icon">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css"/>
  <title>Popcorn</title>
</head>
<body>
  <nav class="container">
    <div class="logo-section">
      <div class="logo">
        <a href="?page=1"><img src="/images/popcorn.png" alt="" /></a>
      </div>
      <div class="header-btns">
        <a class="toggle" href="javascript:void(0);"><i class="fas fa-bars"></i></a>
      </div>
    </div>
    <div class="menu-section">
      <div class="menu">
        <ul>
          <li><a href="?page=1">Home</a></li>
          <li><a href="/user/top-films">Top Rated Films</a></li>
          <li><a href="/user/my-films">My Films</a></li>
          <li><a href="/user/add-page">Add Film</a></li>
          <li><a href="/user/logout">logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    
    <% for(let i=0; i<films.length; i++) { %>
    <div class="film-main">

      <div class="film-content">
        <a class="film-img" href="/user/film/<%=films[i].id %>"><img src="<%= films[i].image %>" alt=""></a>
        <div class="film-text">
          <a class="film-title" href="/user/film/<%=films[i].id %>"><%= films[i].name %></a>
          <p><%= films[i].description.substring(0, 600) + "..." %></p>
          <a href="" class="user">@<%= films[i].user.username %></a>
        </div>
      </div>
      <div class="btns">

        <% if(userLikes.includes(films[i].id)) { %>
        <a href="/user/film/re-like/<%=films[i].id %>/all" class="fav like btn-act"><i class="fas fa-heart"></i> <span><%= films[i].likes.length %></span></a>
        <% } %>
        <% if(!userLikes.includes(films[i].id)) { %>
        <a href="/user/film/like/<%=films[i].id %>/all" class="fav btn-act"><i class="far fa-heart"></i> <span><%= films[i].likes.length %></span></a>
        <% } %>
        <a href="#comment" class="comment-btn btn-act"><i class="far fa-comment"></i> <span><%= films[i].comments.length %></span></a>
      </div>
      
    </div>
    <% } %>
    
  </div>
  <div>

  <script src="/js/script.js"></script>
</body>
</html>